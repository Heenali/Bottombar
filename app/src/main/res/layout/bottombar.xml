<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
   android:id="@+id/wack_bottombarMain"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <!-- _______________________ ___________________________Bottom Bar______________________________________________________ -->

    <LinearLayout
        android:id="@+id/wack_bottombar"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="@color/colorPrimary"
        android:baselineAligned="false">

        <LinearLayout
            android:id="@+id/layout1"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.2"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:orientation="vertical" >

			<ImageView 
			    android:id="@+id/img_1"
                android:layout_width="50px"
                android:layout_height="50px"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/home"
   			 />
               <TextView
                android:id="@+id/txt_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Documnet"
                android:paddingLeft="3dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="9dp"
                android:singleLine="true"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                 android:textColor="@android:color/white"
                android:textAppearance="?android:attr/textAppearanceSmall" >
            </TextView> 
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout2"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.2"
             android:paddingTop="5dp"
             android:paddingBottom="5dp"
            android:orientation="vertical" >
			<ImageView 
    			android:id="@+id/img_2"
                android:layout_width="50px"
                android:layout_height="50px"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/home"
   			 />
             <TextView
                android:id="@+id/txt_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="News"
                android:layout_weight="1"
                android:gravity="center"
                android:singleLine="true"
                android:textSize="9dp"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:textColor="@android:color/white"
                android:textAppearance="?android:attr/textAppearanceSmall" >
            </TextView> 
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout3"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.2"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:orientation="vertical" >
			<ImageView 
			    android:id="@+id/img_3"
                android:layout_width="50px"
                android:layout_height="50px"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/home"
   			 />
               <TextView
                android:id="@+id/txt_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="My info"
                android:paddingLeft="3dp"
                android:layout_weight="1"
                android:gravity="center"
                android:singleLine="true"
                  android:textSize="9dp"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                 android:textColor="@android:color/white"
                android:textAppearance="?android:attr/textAppearanceSmall" >
            </TextView> 
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout4"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.2"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:orientation="vertical" >
			<ImageView 
			    android:id="@+id/img_4"
                android:layout_width="50px"
                android:layout_height="50px"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/home"
   			 />
               <TextView
                android:id="@+id/txt_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Congress guide "
                android:paddingLeft="3dp"
                android:layout_weight="1.2"
                android:gravity="center"
                android:singleLine="true"
                  android:textSize="9dp"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                 android:textColor="@android:color/white"
                android:textAppearance="?android:attr/textAppearanceSmall" >
            </TextView> 
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout5"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.2"
            android:paddingTop="5dp"
             android:paddingBottom="5dp"
            android:orientation="vertical" >


			<ImageView 
			    android:id="@+id/img_5"
                android:layout_width="50px"
                android:layout_height="50px"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/home"
   			 />
               <TextView
                android:id="@+id/txt_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Congress guide"
                android:paddingLeft="3dp"
                android:layout_weight="1"
                android:textSize="9dp"
                android:gravity="center"
                android:singleLine="true"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                 android:textColor="@android:color/white"
                android:textAppearance="?android:attr/textAppearanceSmall" >
            </TextView>

        </LinearLayout>

            </LinearLayout>

   

</LinearLayout>